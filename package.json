{
    "name": "socket-io-chat-app",
    "version": "1.0.0",
    "description": "Real-time chat application with Messenger",
    "private": true,
    "scripts": {
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:server": "cd server && npm run dev",
        "dev:client": "cd client && npm run dev",
        "build": "npm run build:server && npm run build:client",
        "build:server": "cd server && npm install --production",
        "build:client": "cd client && npm run build",
        "test": "npm run test:server && npm run test:client",
        "test:server": "cd server && npm test",
        "test:client": "cd client && npm run test",
        "lint": "npm run lint:server && npm run lint:client",
        "lint:server": "cd server && npm run lint",
        "lint:client": "cd client && npm run lint",
        "lint:fix": "npm run lint:server -- --fix && npm run lint:client -- --fix",
        "install:all": "npm install && cd server && npm install && cd ../client && npm install",
        "clean": "rm -rf node_modules server/node_modules client/node_modules client/dist",
        "docker:build": "docker-compose build",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f",
        "deploy": "bash scripts/deploy.sh",
        "health-check": "node monitoring/health-check.js"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/your-username/socket-io-chat-app.git"
    },
    "keywords": [
        "Messenger",
        "chat",
        "real-time",
        "react",
        "express",
        "nodejs"
    ],
    "author": "Your Name",
    "license": "MIT"
}